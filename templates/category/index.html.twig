{% extends 'base-logged.html.twig' %}

{% block title %}
    {% trans %}Your categories{% endtrans %}
{% endblock %}

{% block content %}



    <div class="row">
        <div class="col-lg-12">
            <h1 class="mt-5">{% trans %}Your categories{% endtrans %}</h1>

            <div class="list-group">

                {% for category in categories %}

                    <a href="{{ path('edit_category', { id: category.id }) }}" class="list-group-item list-group-item-action">
                        {{ category.name }}
                    </a>

                {% endfor %}

                <div class="list-group-item">

                    {{ form_start(form) }}

                    <div class="form-row">
                        <div class="form-group col-md-11">
                            {{ form_widget(form.name, { 'attr': { 'class': 'form-control' }}) }}
                        </div>

                        <div class="form-group col-md-1">
                            <button class="btn btn-primary mb-2" type="submit">{% trans %}Add{% endtrans %}</button>
                        </div>
                    </div>

                    {{ form_end(form) }}

                </div>

            </div>



        </div>
    </div>

{% endblock %}

